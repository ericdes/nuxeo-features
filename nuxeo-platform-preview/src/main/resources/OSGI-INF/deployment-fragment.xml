<?xml version="1.0"?>

<fragment>

  <extension target="application#MODULE">

    <module>
      <java>${bundle.fileName}</java>
    </module>

  </extension>

<install>

    <!--  Unzip the war template -->
    <unzip from="${bundle.fileName}" to="/">
      <include>nuxeo.war/**</include>
    </unzip>

    <!--  Create a temp dir -->
    <!--  Make sure no directory with that name exists -->
    <delete path="preview-nuxeo.tmp" />
    <mkdir path="preview-nuxeo.tmp" />

    <unzip from="${bundle.fileName}" to="preview-nuxeo.tmp" />

    <append
      from="preview-nuxeo.tmp/OSGI-INF/l10n/messages_es.properties"
      to="nuxeo.war/WEB-INF/classes/messages_es.properties"
      addNewLine="true" />

    <append
      from="preview-nuxeo.tmp/OSGI-INF/l10n/messages_en.properties"
      to="nuxeo.war/WEB-INF/classes/messages_en.properties"
      addNewLine="true" />

    <append
      from="preview-nuxeo.tmp/OSGI-INF/l10n/messages_fr.properties"
      to="nuxeo.war/WEB-INF/classes/messages_fr.properties"
      addNewLine="true" />
  </install>


</fragment>

