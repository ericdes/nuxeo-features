<process-definition name="serial-validation">
  <start-state>
    <transition to='s' />
  </start-state>
  <fork>
    <transition to="bar"/>
  </fork>
  <task-node name="bar">
    <transition to="myjoin"/>
  </task-node>
  <join name="myjoin">
    <transition to="end"/>
  </join>
  <end-state name='end' />
</process-definition>
