<process-definition name="parallel-validation">
	<start-state>
		<transition to="choose participants node" />
	</start-state>
	<task-node name="choose participants node">
		<task name="choose participant">
			<assignment actor-id="Administrator" />
		</task>
		<transition name="to fork each participant" to="fork each participant" />
	</task-node>
	<foreach-fork list="#{documents}" var="participant" name="fork each participant">
		<transition to="validate node" />
	</foreach-fork>
	<task-node name="validate node">
		<task name="validate">
			<assignement actor-id="participant.actorId" />
		</task>
		<transition name="participants join"/>
	</task-node>
	<foreach-join name="participants join">
		<transition to="end" />
	</foreach-join>
</process-definition>
