<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.ecm.platform.workflow.web">

  <documentation>
    Workflow client action contributions.

    @version 1.0 @author Julien Anguenot
  </documentation>

  <extension target="org.nuxeo.ecm.platform.actions.ActionService"
    point="actions">

    <documentation>
      Contribute a <i>review</i> action for a new tab.
    </documentation>

    <action id="TAB_CONTENT_REVIEW" link="/incl/tabs/document_review.xhtml"
      enabled="true" label="action.view.review" icon="/icons/file.gif"
      order="57">
      <category>VIEW_ACTION_LIST</category>
      <filter id="view_review">
        <rule grant="true">
          <permission>ReviewParticipant</permission>
          <type>File</type>
          <type>Note</type>
        </rule>
      </filter>
      <filter-id>mutable_document</filter-id>
    </action>

  </extension>

</component>
